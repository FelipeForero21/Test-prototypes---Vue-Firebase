{
  "compilerOptions": {
    "composite": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "ES2020",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["vite.config.ts"]
}
